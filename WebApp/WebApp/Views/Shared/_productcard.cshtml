@model ProductViewModel

<div class="card " style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">@Model.ProductCode</h6>
        <h6 class="card-subtitle mb-2 text-body-secondary">Price: <b>INR</b> @Model.ProductPrice</h6>
        <vc:discount-offers price="@Model.ProductPrice"></vc:discount-offers>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-secondary">View Details</a>
    </div>
</div>