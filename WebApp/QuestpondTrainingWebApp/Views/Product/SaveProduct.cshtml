@model List<ProductViewModel>
@{
    ViewData["Title"] = "SaveProduct";
}

<h1>Products List</h1>

<table class="table table-light">
    <thead>
        <tr>
            <td>Product ID</td>
            <td>Product Code</td>
            <td>Product Name</td>
            <td>Product Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>
                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-productid="@product.ProductId"
                       class="btn btn-danger">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<generate-ordered-list>
    @if (Model.Count > 1)
    {
        @String.Join(",", Model.Select(p => p.ProductName));
    }
</generate-ordered-list>

<div class="container flex-container">
    <a class="btn btn-primary" href="/product/create">Create New Product</a>
</div>

